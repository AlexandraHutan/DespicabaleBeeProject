<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".apiary.ApiaryViewHolder">

    <TextView
        android:id="@+id/apairyNameTV"
        android:layout_width="308dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:textColor="#CB8617"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locationNameTV"
        android:layout_width="308dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:textColor="#CB8617"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apairyNameTV" />

    <TextView
        android:id="@+id/notesTV"
        android:layout_width="308dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:textColor="#CB8617"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationNameTV" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hivesRV"
        android:layout_width="413dp"
        android:layout_height="426dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesTV" />

</androidx.constraintlayout.widget.ConstraintLayout>